<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:luckpan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/iv_draw_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"

                    android:padding="5dp"
                    android:src="@drawable/draw_close"/>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_luckpan_layout"
                android:layout_width="wrap_content"
                android:layout_height="430dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/luckpan_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/winning_bac"/>




            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_im_root"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/rl_luckpan_layout"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="-255dp"
                android:background="@drawable/cash_bic"
                android:gravity="center"

                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_prize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/one_yuan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_im2_root"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/rl_luckpan_layout"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="-275dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"

                >


                <ImageView
                    android:id="@+id/iv_prize2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:src="@drawable/gift_pic"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rule"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/rl_luckpan_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-90dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_miaoshu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="您可至'我的-钱包'管理您的余额，实物"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_miaoshu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="奖品请等待客服与您联系后直邮给您  "
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_view_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/left_arrows2"
                    android:gravity="center"
                    android:padding="5dp"

                    android:text="查看规则"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_coding_draw"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/rl_luckpan_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_shape_solid_white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_look_winning"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/btn_shape_empty_yellow"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"

                        android:background="@color/transparency"
                        android:gravity="center"
                        android:text="查看"
                        android:textColor="@color/txt_rectangle_yellow"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <Button
                    android:id="@+id/btn_again_winning"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_shape_solid_yellow"
                    android:text="再抽一次"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

</FrameLayout>