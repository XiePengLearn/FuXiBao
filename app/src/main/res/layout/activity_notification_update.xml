<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color_tra_press"
    android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/title_layout1"
        layout="@layout/title_layout"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/biankuang_corners_press"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/theme_color"
        android:textSize="16sp"
        />




    <ProgressBar
        android:max="100"
        android:progress="0"
        android:secondaryProgress="100"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/pb_updata"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_up_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/pb_updata"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="0"/>


</RelativeLayout>
