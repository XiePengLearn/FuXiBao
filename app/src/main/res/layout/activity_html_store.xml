<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_for_the_bird_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <!-- begin line 1 -->

        <LinearLayout
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparency"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minWidth="40dip"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="20dip">

            <!-- 左侧返回按钮 -->
            <TextView
                android:id="@+id/back_icon"
                android:layout_width="13dp"
                android:layout_height="20dp"
                android:background="@drawable/image_back_new"/>


        </LinearLayout>
        <!-- end line 1 -->
        <Button
            android:id="@+id/btn_close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/left_btn"
            android:background="@drawable/close"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22sp"
            android:visibility="gone"
            />
        <!-- begin line 2 -->

        <LinearLayout
            android:id="@+id/center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:orientation="vertical">

            <!-- 中间title -->

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint=""
                android:maxLines="1"
                android:maxWidth="180dip"
                android:textColor="@color/black"
                android:textSize="16sp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_next_data_publish"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_select_public"
            android:text="发布"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/share"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_pick_up1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="180dip"
            android:text="成功摘元宝"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_count_down_bird11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="180dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/my_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/title_layout"
        android:progressDrawable="@drawable/runt_progressbar_horizontal"
        android:visibility="visible"/>

    <WebView
        android:id="@+id/wv_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_progress_bar"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/open_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>
