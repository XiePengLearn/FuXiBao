<?xml version="1.0" encoding="utf-8"?>
<com.shuangpin.rich.ui.widget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sc_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@color/bg_normal"
            >


            <LinearLayout
                android:id="@+id/iv_header_root"
                style="@style/common"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/imageview_shape_cycle"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"


                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_user_member_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/iv_header_root"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_mine_user_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="我是名称"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </LinearLayout>



        </LinearLayout>






    </RelativeLayout>

</com.shuangpin.rich.ui.widget.MyScrollView>