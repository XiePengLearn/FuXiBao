<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <include
        android:id="@+id/include1"
        layout="@layout/title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include1"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/bg_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:text="提现到微信钱包"

            android:textColor="@color/tv_33"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/view_lines"/>

        <TextView
            android:id="@+id/tv_point_explain_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:text="提现金额: "

            android:textColor="@color/tv_33"
            android:textSize="16sp"/>

        <com.shuangpin.rich.ui.widget.RadioGroupEx
            android:id="@+id/rge_group_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            >

            <RadioButton
                android:id="@+id/rb_1"
                style="@style/RbStyle"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="15元"/>

            <RadioButton
                android:id="@+id/rb_2"
                style="@style/RbStyle"
                android:layout_width="100dp"
                android:layout_height="40dp"

                android:text="100元"
                android:visibility="gone"/>


            <RadioButton
                android:id="@+id/rb_3"
                style="@style/RbStyle"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="200元"
                android:visibility="gone"/>


            <RadioButton
                android:id="@+id/rb_gong"
                style="@style/RbStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="其他金额"
                android:visibility="gone"/>

        </com.shuangpin.rich.ui.widget.RadioGroupEx>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_returned_to_fans_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginRight="21dp"
                android:text="粉丝助力收益:"
                android:textColor="@color/tv_33"
                android:textSize="14sp"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_withdraw"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/button_put_the_bird"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="提现说明:"
                android:textSize="16sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/goods_release_linear_padding"
                android:text="1.提现每笔手续费2元"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>