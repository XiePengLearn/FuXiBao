<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"
    >

    <!-- 标题 -->

    <include
        android:id="@+id/tv_title"
        layout="@layout/title_layout_withe"/>


    <com.shuangpin.rich.ui.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_lines"/>

            <RelativeLayout
                android:id="@+id/rl_bank_card_pay1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:visibility="visible"

                >


                <TextView
                    android:id="@+id/tv_select_scope_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="全市发元宝"
                    android:textColor="@color/tv_22"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_select_scope_buy_money1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:text="365元"
                    android:textColor="@color/tv_22"
                    android:textSize="15sp"
                    />


                <CheckBox
                    android:id="@+id/cb_select_scope_pay1"
                    style="@style/mycheckboxLogn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_select_scope_info1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_normal"

                android:gravity="center_vertical"

                android:paddingLeft="42dp"
                android:visibility="gone"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_lines"/>

            <RelativeLayout
                android:id="@+id/rl_bank_card_pay2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:visibility="invisible"

                >


                <TextView
                    android:id="@+id/tv_select_scope_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="全省发元宝"
                    android:textColor="@color/tv_22"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_select_scope_buy_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:text="3650元"
                    android:textColor="@color/tv_22"
                    android:textSize="15sp"
                    />


                <CheckBox
                    android:id="@+id/cb_select_scope_pay2"
                    style="@style/mycheckboxLogn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_select_scope_info2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_normal"
                android:gravity="center_vertical"
                android:paddingLeft="42dp"
                android:text=""
                android:visibility="gone"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/view_lines"/>



            <RelativeLayout
                android:id="@+id/rl_bank_card_pay3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:visibility="invisible"

                >


                <TextView
                    android:id="@+id/tv_select_scope_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="全国发元宝"
                    android:textColor="@color/tv_22"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_select_scope_buy_money3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:text="36500元"
                    android:textColor="@color/tv_22"
                    android:textSize="15sp"
                    />


                <CheckBox
                    android:id="@+id/cb_select_scope_pay3"
                    style="@style/mycheckboxLogn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_select_scope_info3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_normal"
                android:gravity="center_vertical"
                android:paddingLeft="42dp"
                android:visibility="gone"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/view_lines"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="90dp"
                android:background="@color/view_lines"/>
            <LinearLayout
                android:id="@+id/ll_mode_of_payment"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="选择支付方式 :"
                    android:textColor="@color/tv_33"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_gr_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/transparency"
                    android:hint="请输入金额"
                    android:maxLength="10"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/tv_mode_of_payment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="微信"
                    android:textColor="@color/tv_33"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"

                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="33dp"
                    android:src="@drawable/arrow3"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_lines"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:hint="选择支付方式"
                android:paddingLeft="@dimen/goods_release_linear_padding"
                android:textColor="@color/tv_8033"
                android:textSize="13sp"/>



            <Button
                android:id="@+id/btn_pay_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/button_put_the_bird"
                android:text="支付"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </com.shuangpin.rich.ui.widget.MyScrollView>


</RelativeLayout>