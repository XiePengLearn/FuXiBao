<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_background"
                android:fitsSystemWindows="true">


    <include
        android:id="@+id/title_layout1"
        layout="@layout/title_layout"/>


    <LinearLayout
        android:id="@+id/ll_login_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="200dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="295dp"

            android:background="@drawable/login_bottom_bic"
            android:orientation="vertical">
            <!-- 输入手机号 -->
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/phone_password_bic"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_register_phone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    >

                    <TextView
                        android:id="@+id/tv_register_phone"
                        style="@style/common"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/txt_general_bg"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/edit_bind_tel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_register_phone"
                        android:background="@color/transparency"
                        android:hint="手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="@color/txt_general_bg"
                        android:textColorHint="@color/txt_general_bg"
                        android:textSize="15sp"/>

                    <!--  获取验证码 -->
                    <Button
                        android:id="@+id/btn_bind_get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/btn_idcode_selector"
                        android:text="获取验证码"
                        android:textColor="@color/txt_sms_get_selector"/>

                </RelativeLayout>

            </LinearLayout>


            <!--获取验证码-->
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:background="@drawable/phone_password_bic"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_register_captcha"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_register_captcha"
                        style="@style/common"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/txt_general_bg"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/edit_bind_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_register_captcha"
                        android:background="@color/transparency"
                        android:hint="验证码"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:textColor="@color/txt_general_bg"
                        android:textColorHint="@color/txt_general_bg"
                        android:textSize="15sp"/>
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_bind_confirm"
                android:layout_width="263dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="72dp"
                android:background="@drawable/button_put_the_bird"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="21sp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
