<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_for_the_bird_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/tv22ff"
        >

        <!-- begin line 1 -->

        <LinearLayout
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparency"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minWidth="40dip"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="20dip">

            <!-- 左侧返回按钮 -->
            <TextView
                android:id="@+id/back_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/guanbi_close"/>


        </LinearLayout>
        <!-- end line 1 -->


        <!-- begin line 2 -->

        <LinearLayout
            android:id="@+id/center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:orientation="vertical">

            <!-- 中间title -->

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint=""
                android:maxLines="1"
                android:maxWidth="180dip"
                android:textColor="@color/white"
                android:textSize="16sp"/>


        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/my_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/title_layout"
        android:progressDrawable="@drawable/runt_progressbar_horizontal"
        android:visibility="visible"/>

    <WebView
        android:id="@+id/wv_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_progress_bar"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/open_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>
