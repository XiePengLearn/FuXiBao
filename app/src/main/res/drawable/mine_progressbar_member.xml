<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--  设置背景色（蓝色）  -->
    <item  android:id="@android:id/background" android:height="3dp" >
        <shape>
            <gradient android:startColor="@color/tv_33"
                      android:endColor="@color/tv_33" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!--  设置进度条颜色（红色）  -->
    <item  android:id="@android:id/progress" android:height="3dp">
        <clip>
            <shape>
                <gradient  android:startColor="@color/tv_b87d1d"
                           android:endColor="@color/tv_fdc760" />
                <corners android:radius="2dp" />
            </shape>
        </clip>
    </item>
</layer-list>
